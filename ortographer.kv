<HomeScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 40
        spacing: 30

        canvas.before:
            Color:
                rgba: 0.08, 0.08, 0.1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Widget:

        Label:
            text: root.status
            font_size: "26sp"
            bold: True
            halign: "center"
            valign: "middle"
            text_size: self.size
            color: 1,1,1,1

        Widget:

        Button:
            text: "Request Camera Permission"
            size_hint_y: None
            height: "55dp"
            background_normal: ""
            background_color: 0.2, 0.6, 1, 1
            font_size: "18sp"
            on_press: app.ask_permission(0)

        Widget:
